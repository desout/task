{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "build",
    "**/__mocks__/*",
    "**/__tests__/*"
  ]
}
